template(name='home')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='We are average. We are mediocre at best. We are simple. We are SORRY. Free-to-play online multiplayer Hi-Ho-Cherry-O!')
    meta(name='author', content='Anna Rapp and Jenny Niemann')
    title Hi-Ho-Cherry-O
    // Custom Fonts
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
